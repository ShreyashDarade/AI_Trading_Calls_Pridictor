# ============================================
# INDIAN AI TRADER - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control!
#
# Quick Start: Only GROWW_API_KEY is needed for trading
# The platform works with FREE NSE data without any API key

# ============================================
# DATA SOURCE CONFIGURATION
# ============================================
# Option 1: NSE India (FREE - Default, no API key needed)
# The platform automatically uses free NSE data

# Option 2: Groww Trading API (PAID - â‚¹499/month)
# Get your API key from: https://groww.in/trading-api
GROWW_API_KEY=
GROWW_API_SECRET=
GROWW_ACCESS_TOKEN=

# Option 3: OpenAI GPT for AI predictions (OPTIONAL)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ============================================
# TRADING CONFIGURATION
# ============================================
# Trading mode: PAPER (simulated) or LIVE (real money)
TRADING_MODE=PAPER

# Risk management
MAX_POSITION_SIZE_PCT=5
MAX_DAILY_LOSS_PCT=3
MIN_SIGNAL_CONFIDENCE=0.6
MAX_POSITIONS=10
DEFAULT_STOP_LOSS_PCT=2.0

# ============================================
# DATABASE CONFIGURATION (Optional)
# ============================================
# PostgreSQL - for persistent storage
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=indian_ai_trader
POSTGRES_USER=trader
POSTGRES_PASSWORD=

# ClickHouse - for time-series data
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_DB=market_data
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Redis - for caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# MESSAGE QUEUE (Optional - for microservices)
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=indian-ai-trader

# ============================================
# SERVICE CONFIGURATION
# ============================================
# API Gateway (Main web server)
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=0.0.0.0

# Other services (optional)
NSE_DATA_SERVICE_PORT=8020
INSTRUMENT_SERVICE_PORT=8001
MARKET_INGESTOR_PORT=8002
FEATURE_SERVICE_PORT=8004
SIGNAL_SERVICE_PORT=8005
BACKTEST_SERVICE_PORT=8006
PORTFOLIO_SERVICE_PORT=8007
ORDER_SERVICE_PORT=8008
NOTIFICATION_SERVICE_PORT=8010

# ============================================
# SECURITY
# ============================================
# JWT for authentication (generate your own secret!)
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# NOTIFICATIONS (Optional)
# ============================================
# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Slack notifications
SLACK_WEBHOOK_URL=

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development
RELOAD=true

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_SIGNAL_SERVICE=true
ENABLE_NOTIFICATIONS=false

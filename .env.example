# ============================================
# INDIAN AI TRADER - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# GROWW API CONFIGURATION
# ============================================
GROWW_API_KEY=your_groww_api_key_here
GROWW_API_SECRET=your_groww_api_secret_here
GROWW_ACCESS_TOKEN=your_access_token_here
GROWW_API_BASE_URL=https://api.groww.in
GROWW_API_VERSION=v1

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL (Transactional data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=indian_ai_trader
POSTGRES_USER=trader
POSTGRES_PASSWORD=your_secure_password_here

# ClickHouse (Time-series data)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_DB=market_data
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Redis (Cache & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# MESSAGE QUEUE (Redpanda/Kafka)
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_CONSUMER_GROUP=indian-ai-trader

# ============================================
# SERVICE PORTS
# ============================================
API_GATEWAY_PORT=8000
INSTRUMENT_SERVICE_PORT=8001
MARKET_INGESTOR_PORT=8002
BAR_AGGREGATOR_PORT=8003
FEATURE_SERVICE_PORT=8004
SIGNAL_SERVICE_PORT=8005
BACKTEST_SERVICE_PORT=8006
PORTFOLIO_SERVICE_PORT=8007
ORDER_SERVICE_PORT=8008
AUDIT_SERVICE_PORT=8009
NOTIFICATION_SERVICE_PORT=8010

# ============================================
# SECURITY
# ============================================
JWT_SECRET_KEY=your_super_secret_jwt_key_here_at_least_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============================================
# OBSERVABILITY
# ============================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_LEVEL=INFO

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_SIGNAL_SERVICE=true
ENABLE_NOTIFICATIONS=true

# ============================================
# TRADING CONFIGURATION
# ============================================
DEFAULT_WATCHLIST=NIFTY50
MAX_POSITIONS=10
MAX_POSITION_SIZE_PERCENT=5.0
DEFAULT_STOP_LOSS_PERCENT=2.0
MAX_DAILY_TRADES=20

# ============================================
# NOTIFICATION SETTINGS
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=false
RELOAD=true
ENVIRONMENT=development
